<div class="container-fluid">
	<h1 class="h3 mb-2 text-gray-800"><%= action_message %></h1>
  <% if @question.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      <h6 class="m-0 font-weight-bold text-primary">Foram encontrados os seguintes erros:</h6>
      <br/>
      <ul>
        <% @question.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
	<div class="card shadow mb-4">
		<div class="card-header py-3">
      <%= "#{action_message}" %>
	  </div>
		<div class="card-body">
			<div class="row">
				<%# <div class="col-lg-6"> %>
				<div class="col">
					<%= form_with(model: [ :admins_backoffice, @question ], local: true) do |form| %>
						<div class="form-group">
							<%= form.label :description %>
							<%= form.text_area :description, class:"form-control", placeholder:"#{Question.human_attribute_name(:description)}", rows: 5 %>
						</div>                           
						<div class="form-group">
							<%= form.label :subject_id %>
							<%= form.collection_select(:subject_id, @subjects, :id, :description, {}, { class:"form-control" }) %>
						</div>                           
						<button type="submit" class="btn btn-primary"><%= t('button.submit')%></button>
						<%# <button type="reset" class="btn btn-primary">Limpar</button> %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>