<%# <h1>Listando Quest√µes</h1> %>

<div class="container-fluid">
  <h1 class="h3 mb-2 text-gray-800"><%= t('message.listing', model: @questions.model_name.human(count: 2)) %></h1>
  <div class="card shadow mb-4">
    <div class="card-header py-3">

    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th style="width: 80px">#</th>
              <th><%= translate_attribute(@questions, :description) %></th>
              <th><%= translate_attribute(@questions, :subject) %></th>
              <th style="width:87px">
                <%= link_to new_admins_backoffice_question_path, class:"btn btn-success btn-circle btn-sm" do %>
                    <i class="fas fa-plus"></i>
                <% end %>
              </th>
            </tr>
          </thead>
          <tbody>
            <% @questions.each do |question| %>
              <tr>
                <td><%= question.id %></td>
                <td><%= question.description.truncate(50) %></td>
                <td><%= question.subject.description.truncate(30) %></td>
                <td>
                  <%= link_to edit_admins_backoffice_question_path(question), class:"btn btn-primary btn-circle btn-sm" do %>
                      <i class="fas fa-edit"></i>
                  <% end %>
                  <%= link_to admins_backoffice_question_path(question), method: :delete, class:"btn btn-danger btn-circle btn-sm", data: { confirm: t('message.confirm_with', item: question.description.truncate(15))} do %>
                      <i class="fas fa-minus"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="text-center">
          <%= paginate @questions %>
        </div>
      </div>
    </div>
  </div>
</div>